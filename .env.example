# Copy this file to .env and fill in your values. Do not commit .env.

# Webflow (only the collection specified below will be queried)
WEBFLOW_API_TOKEN=your_webflow_api_token_here
WEBFLOW_COLLECTION_ID=your_collection_id_here
WEBFLOW_SITE_DOMAIN=https://www.example.com
WEBFLOW_URL_PREFIX=/blog/

# Google
GA4_PROPERTY_ID=123456789
GOOGLE_SHEET_ID=your_google_sheet_id_here
SHEET_NAME=Article Traffic
SERVICE_ACCOUNT_FILE=C:\path\to\google-api-auth\credentials\service_account.json
# For cloud deploy: paste entire service account JSON as one line (or use SERVICE_ACCOUNT_FILE above)
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# Optional
TRAFFIC_DAYS=30
# Only refresh GA4 for articles published in last N days (articles expire quickly; 7 is typical)
REFRESH_DAYS=7
# Optional one-time backfill: set to e.g. 2025 to load only that year's articles with full-year traffic; remove after first run
# BACKFILL_YEAR=2025

# Web trigger (Railway/Render): set a secret token so only people with the link can run the sync. Example: TRIGGER_TOKEN=your-long-random-string
# TRIGGER_TOKEN=
